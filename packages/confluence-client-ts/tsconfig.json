{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"exactOptionalPropertyTypes": false,
		"inlineSourceMap": false,
		"isolatedModules": false,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	},
	"exclude": ["node_modules", "**/*.spec.ts", "dist"],
	"extends": "../../tsconfig.json",
	"include": ["src/**/*"]
}
